@model filmdizikitap.Models.Category

@{
    ViewBag.Title = "Kategori Düzenle";
}

<div style="margin-left:15%;" class="col-md-8">


    <h2>Kategori Düzenle</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                @Html.LabelFor(model => model.KategoriAdi, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.KategoriAdi, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.KategoriAdi, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Kaydet" class="btn btn-primary" /> @Html.ActionLink("Listeye Dön", "Index",null, new { @class = "btn btn-danger" })
                </div>
            </div>
        </div>
    }


</div>